{
  "dashboard": {
    "title": "Lahore Temperature Prediction - Monitoring Dashboard",
    "tags": ["mlops", "prediction", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(prediction_requests_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Inference Latency (95th percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(prediction_latency_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 0.5, "color": "yellow"},
          {"value": 1.0, "color": "red"}
        ]
      },
      {
        "id": 3,
        "title": "Data Drift Ratio",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(data_drift_ratio_sum[5m]) / rate(data_drift_ratio_count[5m])",
            "legendFormat": "Drift Ratio",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Drift Ratio", "max": 1, "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 0.3, "color": "yellow"},
          {"value": 0.5, "color": "red"}
        ]
      },
      {
        "id": 4,
        "title": "Data Drift Detections by Feature",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(data_drift_detections_total[5m])",
            "legendFormat": "{{feature}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Detections/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(prediction_requests_total{status=\"error\"}[5m]) / rate(prediction_requests_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.05, "color": "yellow"},
              {"value": 0.1, "color": "red"}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "sum(prediction_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "short"
        }
      },
      {
        "id": 7,
        "title": "Average Latency",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(prediction_latency_seconds_sum[5m]) / rate(prediction_latency_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "s"
        }
      },
      {
        "id": 8,
        "title": "Data Drift Ratio (Current)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "rate(data_drift_ratio_sum[5m]) / rate(data_drift_ratio_count[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.3, "color": "yellow"},
              {"value": 0.5, "color": "red"}
            ]
          }
        }
      }
    ]
  }
}

